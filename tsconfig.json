{
    "include": ["src"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "jsx": "react",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "lib": ["DOM", "ESNext"],
        "downlevelIteration": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "dist"
    }
}
